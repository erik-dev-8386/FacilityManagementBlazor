@page "/facilitythanhdts/create"
@using CFB.Services.ThanhDT
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using CFB.Entities.ThanhDT.Models
@inject NavigationManager NavigationManager
@inject FacilityThanhDtService _facilityThanhDTService
@inject FacilityTypeThanhDtService _facilityTypeThanhDtService
@inject CampusThanhDtService _campusThanhDtService
@attribute [Authorize]

<PageTitle>Create Facility</PageTitle>

<style>
    .create-container {
        max-width: 900px;
        margin: 40px auto;
        padding: 0 20px;
    }

    .page-header {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        color: white;
        padding: 40px 30px;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(79, 172, 254, 0.3);
        margin-bottom: 30px;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

        .page-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
            animation: rotate 20s linear infinite;
        }

    @@keyframes rotate {
        0%

    {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }

    }

    .page-header i {
        font-size: 3rem;
        margin-bottom: 15px;
        position: relative;
        z-index: 1;
    }

    .page-header h1 {
        margin: 15px 0 10px;
        font-size: 2rem;
        font-weight: 600;
        position: relative;
        z-index: 1;
    }

    .page-header p {
        margin: 0;
        opacity: 0.9;
        font-size: 1.1rem;
        position: relative;
        z-index: 1;
    }

    .form-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.08);
        padding: 35px;
        margin-bottom: 25px;
    }

    .form-header {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 3px solid #4facfe;
    }

        .form-header i {
            color: #4facfe;
            font-size: 1.8rem;
        }

        .form-header h2 {
            margin: 0;
            font-size: 1.6rem;
            font-weight: 600;
            color: #212529;
        }

    .form-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 20px;
    }

    .form-group {
        margin-bottom: 0;
    }

        .form-group.full-width {
            grid-column: 1/-1;
        }

    .form-label {
        display: flex;
        align-items: center;
        gap: 8px;
        color: #495057;
        font-weight: 600;
        margin-bottom: 8px;
        font-size: 0.95rem;
    }

        .form-label i {
            color: #4facfe;
            font-size: 1.1rem;
        }

        .form-label .required {
            color: #dc3545;
            margin-left: 2px;
        }

    .form-control, .form-select {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid #e9ecef;
        border-radius: 8px;
        font-size: 1rem;
        transition: all 0.3s;
        background: #f8f9fa;
    }

        .form-control:focus, .form-select:focus {
            outline: none;
            border-color: #4facfe;
            background: white;
            box-shadow: 0 0 0 3px rgba(79, 172, 254, 0.1);
        }

        .form-control:hover, .form-select:hover {
            border-color: #00f2fe;
        }

    .form-check {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 15px;
        background: #f8f9fa;
        border-radius: 8px;
        border: 2px solid #e9ecef;
        transition: all 0.3s;
    }

        .form-check:hover {
            background: #e9ecef;
            border-color: #4facfe;
        }

    .form-check-input {
        width: 20px;
        height: 20px;
        cursor: pointer;
        border: 2px solid #4facfe;
    }

        .form-check-input:checked {
            background-color: #4facfe;
            border-color: #4facfe;
        }

    .form-check-label {
        cursor: pointer;
        font-weight: 600;
        color: #495057;
        margin: 0;
    }

    .validation-message {
        color: #dc3545;
        font-size: 0.875rem;
        margin-top: 5px;
        display: flex;
        align-items: center;
        gap: 5px;
    }

        .validation-message::before {
            content: '⚠';
        }

    .validation-summary {
        background: #fff3cd;
        border-left: 4px solid #ffc107;
        padding: 15px 20px;
        border-radius: 8px;
        margin-bottom: 25px;
    }

        .validation-summary ul {
            margin: 0;
            padding-left: 20px;
            color: #856404;
        }

    .action-buttons {
        display: flex;
        gap: 15px;
        align-items: center;
        padding-top: 25px;
        border-top: 2px solid #e9ecef;
        margin-top: 25px;
        flex-wrap: wrap;
    }

    .btn-create {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        color: white;
        padding: 14px 35px;
        border: none;
        border-radius: 8px;
        font-size: 1.05rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        box-shadow: 0 4px 10px rgba(79, 172, 254, 0.3);
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

        .btn-create:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(79, 172, 254, 0.4);
        }

        .btn-create:active {
            transform: translateY(0);
        }

    .btn-cancel {
        color: #6c757d;
        text-decoration: none;
        padding: 14px 30px;
        border: 2px solid #6c757d;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

        .btn-cancel:hover {
            background: #6c757d;
            color: white;
            transform: translateY(-2px);
        }

    .info-box {
        background: linear-gradient(135deg, #e0f7fa 0%, #b2ebf2 100%);
        border-left: 4px solid #00bcd4;
        padding: 15px 20px;
        border-radius: 8px;
        margin-bottom: 25px;
        display: flex;
        align-items: center;
        gap: 12px;
    }

        .info-box i {
            color: #00838f;
            font-size: 1.5rem;
        }

        .info-box p {
            margin: 0;
            color: #006064;
            font-size: 0.95rem;
        }

    .form-divider {
        grid-column: 1/-1;
        height: 2px;
        background: linear-gradient(90deg, transparent, #4facfe, transparent);
        margin: 10px 0;
    }

    .feature-badge {
        display: inline-block;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 4px 12px;
        border-radius: 12px;
        font-size: 0.75rem;
        font-weight: 600;
        margin-left: 10px;
    }

    .helper-text {
        font-size: 0.85rem;
        color: #6c757d;
        margin-top: 4px;
        font-style: italic;
    }

    @@media (max-width: 768px) {
        .form-grid

    {
        grid-template-columns: 1fr;
    }

    .action-buttons {
        flex-direction: column;
        align-items: stretch;
    }

    .btn-create, .btn-cancel {
        justify-content: center;
        width: 100%;
    }

    }
</style>

<div class="create-container">
    <div class="page-header">
        <i class="bi bi-plus-circle-fill"></i>
        <h1>Create New Facility</h1>
        <p>Add a new facility to the system</p>
    </div>

    <div class="form-card">
        <div class="form-header">
            <i class="bi bi-building-fill-add"></i>
            <h2>Facility Information</h2>
            <span class="feature-badge">NEW</span>
        </div>

        <div class="info-box">
            <i class="bi bi-lightbulb-fill"></i>
            <p>Please fill in all required fields marked with <strong style="color: #dc3545;">*</strong> to create a new facility</p>
        </div>

        <EditForm method="post" Model="FacilityThanhDt" OnValidSubmit="AddFacilityThanhDt" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="validation-summary" role="alert" />

            <div class="form-grid">
                <div class="form-group full-width">
                    <label for="facilityname" class="form-label">
                        <i class="bi bi-tag-fill"></i>
                        Facility Name
                        <span class="required">*</span>
                    </label>
                    <InputText id="facilityname" @bind-Value="FacilityThanhDt.FacilityName" class="form-control" placeholder="Enter facility name (e.g., Conference Room A)" />
                    <ValidationMessage For="() => FacilityThanhDt.FacilityName" class="validation-message" />
                </div>

                <div class="form-divider"></div>

                <div class="form-group">
                    <label for="facilitytypethanhdtid" class="form-label">
                        <i class="bi bi-diagram-3-fill"></i>
                        Facility Type
                        <span class="required">*</span>
                    </label>
                    <InputSelect id="facilitytypethanhdtid" @bind-Value="FacilityThanhDt.FacilityTypeThanhDtid" class="form-control">
                        @foreach (var item in FacilityTypeThanhDts)
                        {
                            <option value="@item.FacilityTypeThanhDtid">@string.Format("{0} - {1}", item.FacilityTypeThanhDtid, item.TypeName)</option>
                        }
                    </InputSelect>
                    <p class="helper-text">Select the type of facility</p>
                    <ValidationMessage For="() => FacilityThanhDt.FacilityTypeThanhDtid" class="validation-message" />
                </div>

                <div class="form-group">
                    <label for="campusthanhdtid" class="form-label">
                        <i class="bi bi-geo-alt-fill"></i>
                        Campus
                        <span class="required">*</span>
                    </label>
                    <InputSelect id="campusthanhdtid" @bind-Value="FacilityThanhDt.CampusThanhDtid" class="form-control">
                        @foreach (var item in CampusThanhDts)
                        {
                            <option value="@item.CampusThanhDtid">@string.Format("{0} - {1}", item.CampusThanhDtid, item.Name)</option>
                        }
                    </InputSelect>
                    <p class="helper-text">Select the campus location</p>
                    <ValidationMessage For="() => FacilityThanhDt.CampusThanhDtid" class="validation-message" />
                </div>

                <div class="form-group">
                    <label for="capacity" class="form-label">
                        <i class="bi bi-people-fill"></i>
                        Capacity
                        <span class="required">*</span>
                    </label>
                    <InputNumber id="capacity" @bind-Value="FacilityThanhDt.Capacity" class="form-control" placeholder="Enter maximum capacity" />
                    <p class="helper-text">Maximum number of people</p>
                    <ValidationMessage For="() => FacilityThanhDt.Capacity" class="validation-message" />
                </div>

                <div class="form-group">
                    <label for="locationdetail" class="form-label">
                        <i class="bi bi-pin-map-fill"></i>
                        Location Detail
                    </label>
                    <InputText id="locationdetail" @bind-Value="FacilityThanhDt.LocationDetail" class="form-control" placeholder="Enter specific location (e.g., Building A, Floor 3)" />
                    <p class="helper-text">Optional: Specific location details</p>
                    <ValidationMessage For="() => FacilityThanhDt.LocationDetail" class="validation-message" />
                </div>

                <div class="form-divider"></div>

                <div class="form-group full-width">
                    <label for="description" class="form-label">
                        <i class="bi bi-file-text-fill"></i>
                        Description
                    </label>
                    <InputText id="description" @bind-Value="FacilityThanhDt.Description" class="form-control" placeholder="Enter facility description and features" />
                    <p class="helper-text">Optional: Additional information about the facility</p>
                    <ValidationMessage For="() => FacilityThanhDt.Description" class="validation-message" />
                </div>

                <div class="form-group">
                    <label class="form-label">
                        <i class="bi bi-toggle-on"></i>
                        Availability Status
                    </label>
                    <div class="form-check">
                        <InputCheckbox id="isavailable" @bind-Value="FacilityThanhDt.IsAvailable" class="form-check-input" />
                        <label for="isavailable" class="form-check-label">
                            <i class="bi bi-check-circle"></i> Make this facility available for booking
                        </label>
                    </div>
                    <ValidationMessage For="() => FacilityThanhDt.IsAvailable" class="validation-message" />
                </div>

                <div class="form-divider"></div>

                <div class="form-group">
                    <label for="createdat" class="form-label">
                        <i class="bi bi-calendar-plus-fill"></i>
                        Created At
                    </label>
                    <InputDate id="createdat" @bind-Value="FacilityThanhDt.CreatedAt" class="form-control" />
                    <p class="helper-text">Record creation date</p>
                    <ValidationMessage For="() => FacilityThanhDt.CreatedAt" class="validation-message" />
                </div>

                <div class="form-group">
                    <label for="updatedat" class="form-label">
                        <i class="bi bi-calendar-check-fill"></i>
                        Updated At
                    </label>
                    <InputDate id="updatedat" @bind-Value="FacilityThanhDt.UpdatedAt" class="form-control" />
                    <p class="helper-text">Last update date (optional)</p>
                    <ValidationMessage For="() => FacilityThanhDt.UpdatedAt" class="validation-message" />
                </div>
            </div>

            <div class="action-buttons">
                <button type="submit" class="btn-create">
                    <i class="bi bi-plus-circle-fill"></i>
                    Create Facility
                </button>
                <a href="/facilitythanhdts" class="btn-cancel">
                    <i class="bi bi-x-circle"></i>
                    Cancel
                </a>
            </div>
        </EditForm>
    </div>
</div>

@code {
    [SupplyParameterFromForm]
    private FacilityThanhDt FacilityThanhDt { get; set; } = new();
    private List<FacilityTypeThanhDt> FacilityTypeThanhDts { get; set; } = new();
    private List<CampusThanhDt> CampusThanhDts { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        FacilityTypeThanhDts = await _facilityTypeThanhDtService.GetAllAsync();
        CampusThanhDts = await _campusThanhDtService.GetAllAsync();

        if ((FacilityTypeThanhDts is null || !FacilityTypeThanhDts.Any()) &&
        (CampusThanhDts is null || !CampusThanhDts.Any()))
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task AddFacilityThanhDt()
    {
        _facilityThanhDTService?.CreateAsync(FacilityThanhDt);
        NavigationManager.NavigateTo("/facilitythanhdts");
    }
}