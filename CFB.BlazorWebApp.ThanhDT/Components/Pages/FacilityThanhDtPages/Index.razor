@code {
    private IQueryable<FacilityThanhDt>? FacilityThanhDts = default!;
    private PaginationState pagination = new PaginationState { ItemsPerPage = 5 };
    public int TotalPages;
    bool CanGoNext => pagination.CurrentPageIndex < TotalPages - 1;
    bool CanGoPrevious => pagination.CurrentPageIndex > 0;

    private string searchFacilityName = string.Empty;
    private int searchCapacity = 0;
    private string searchTypeName = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        FacilityThanhDts = (await _facilityThanhDTService.GetAllAsync()).AsQueryable();
        TotalPages = (int)Math.Ceiling((double)FacilityThanhDts.Count() / pagination.ItemsPerPage);
    }

    private async Task SearchFacilities()
    {
        var searchResults = await _facilityThanhDTService.SearchAsync(searchFacilityName, searchCapacity, searchTypeName);
        FacilityThanhDts = searchResults.AsQueryable();
        TotalPages = (int)Math.Ceiling((double)FacilityThanhDts.Count() / pagination.ItemsPerPage);
        await pagination.SetCurrentPageIndexAsync(0);
    }

    private async Task ClearSearch()
    {
        searchFacilityName = string.Empty;
        searchCapacity = 0;
        searchTypeName = string.Empty;
        await LoadData();
        await pagination.SetCurrentPageIndexAsync(0);
    }

    async Task NextPage()
    {
        await pagination.SetCurrentPageIndexAsync(pagination.CurrentPageIndex + 1);
    }

    async Task PreviousPage()
    {
        if (pagination.CurrentPageIndex > 0)
            await pagination.SetCurrentPageIndexAsync(pagination.CurrentPageIndex - 1);
    }
}