@page "/facilitythanhdts"
@using CFB.Services.ThanhDT
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using CFB.Entities.ThanhDT.Models
@inject FacilityThanhDtService _facilityThanhDTService
@attribute [Authorize]

<PageTitle>Facility Management</PageTitle>

<div class="page-container">
    <div class="page-header">
        <div>
            <h1 class="page-title">🏢 Facility Management</h1>
            <p class="page-subtitle">Manage and search campus facilities</p>
        </div>
        <a href="facilitythanhdts/create" class="btn btn-success">
            <span class="btn-icon">➕</span> Create New Facility
        </a>
    </div>

    <!-- Search Form -->
    <div class="search-container">
        <div class="search-header">
            <h3>🔍 Search Facilities</h3>
        </div>
        <div class="search-form">
            <div class="form-group">
                <label>📝 Facility Name</label>
                <input type="text" @bind="searchFacilityName" class="form-control" placeholder="Search by name..." />
            </div>
            <div class="form-group">
                <label>👥 Capacity</label>
                <input type="number" @bind="searchCapacity" class="form-control" placeholder="Min capacity..." />
            </div>
            <div class="form-group">
                <label>🏷️ Type Name</label>
                <input type="text" @bind="searchTypeName" class="form-control" placeholder="Search by type..." />
            </div>
            <div class="form-group btn-group-container">
                <button class="btn btn-primary" @onclick="SearchFacilities">
                    <span class="btn-icon">🔎</span> Search
                </button>
                <button class="btn btn-secondary" @onclick="ClearSearch">
                    <span class="btn-icon">🔄</span> Clear
                </button>
            </div>
        </div>
    </div>

    <!-- Results Table -->
    <div class="table-container">
        <QuickGrid Class="modern-table" Items="FacilityThanhDts" Pagination="pagination">
            <PropertyColumn Property="facilitythanhdt => facilitythanhdt.FacilityName" Title="Facility Name" />
            <PropertyColumn Property="facilitythanhdt => facilitythanhdt.FacilityTypeThanhDt.TypeName" Title="Type" />
            <PropertyColumn Property="facilitythanhdt => facilitythanhdt.CampusThanhDt.Name" Title="Campus" />
            <PropertyColumn Property="facilitythanhdt => facilitythanhdt.Capacity" Title="Capacity" />
            <PropertyColumn Property="facilitythanhdt => facilitythanhdt.LocationDetail" Title="Location" />
            <PropertyColumn Property="facilitythanhdt => facilitythanhdt.Description" Title="Description" />
            <PropertyColumn Property="facilitythanhdt => facilitythanhdt.IsAvailable" Title="Available" />
            <PropertyColumn Property="facilitythanhdt => facilitythanhdt.CreatedAt" Title="Created" Format="dd/MM/yyyy" />
            <PropertyColumn Property="facilitythanhdt => facilitythanhdt.UpdatedAt" Title="Updated" Format="dd/MM/yyyy" />
            <TemplateColumn Title="Actions" Context="facilitythanhdt">
                <div class="action-buttons">
                    <a href="@($"facilitythanhdts/edit?facilitythanhdtid={facilitythanhdt.FacilityThanhDtid}")" class="action-btn edit-btn" title="Edit">
                        ✏️
                    </a>
                    <a href="@($"facilitythanhdts/details?facilitythanhdtid={facilitythanhdt.FacilityThanhDtid}")" class="action-btn detail-btn" title="Details">
                        👁️
                    </a>
                    <a href="@($"facilitythanhdts/delete?facilitythanhdtid={facilitythanhdt.FacilityThanhDtid}")" class="action-btn delete-btn" title="Delete">
                        🗑️
                    </a>
                </div>
            </TemplateColumn>
        </QuickGrid>
    </div>

    <!-- Pagination -->
    <div class="pagination-controls">
        <button class="pagination-btn" @onclick="async () => await PreviousPage()" disabled="@(!CanGoPrevious)">
            ⬅️ Previous
        </button>
        <span class="page-info">
            Page <strong>@(pagination.CurrentPageIndex + 1)</strong> of <strong>@TotalPages</strong>
        </span>
        <button class="pagination-btn" @onclick="async () => await NextPage()" disabled="@(!CanGoNext)">
            Next ➡️
        </button>
    </div>
</div>

